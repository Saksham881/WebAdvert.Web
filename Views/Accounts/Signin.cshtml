@{
}
@model WebAdvert.Web.Models.Accounts.SigninModel;

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Accounts" asp-action="Signin">
            <h4>Signin</h4>
            <h5><a asp-controller="Accounts" asp-action="Signup">If you not a member you can signup here</a></h5>
            <hr />

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    @Html.DisplayName("RememberMe")
                </div>
            </div>

            <button type="submit" class="btn btn-default">Signin</button>
        </form>
    </div>
</div>